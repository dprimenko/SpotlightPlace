<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imvItemEventsList"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:id="@+id/rlDataItemEventsList"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/imvItemEventsList">

            <TextView
                android:id="@+id/txvTitleItemEventsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                />

            <TextView
                android:id="@+id/txvDescriptionItemEventsList"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txvTitleItemEventsList"
                android:textSize="16sp"
                android:textColor="@color/colorSecondaryText"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llActionButtonsEventsList"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/imvItemEventsList"
            android:layout_toRightOf="@id/rlDataItemEventsList"
            android:layout_alignParentRight="true"
            android:gravity="right">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_location_item_event_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_map_marker"
                android:tint="@color/white"
                app:elevation="2dp"
                app:fabSize="mini"
                android:visibility="invisible"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_view_more_item_event_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/white"
                app:elevation="2dp"
                app:fabSize="mini"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddressItemEventsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@id/rlDataItemEventsList">

            <ImageView
                android:id="@+id/imvAddressItemEventsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="top"
                android:src="@drawable/ic_map_marker"/>

            <TextView
                android:id="@+id/txvAddressItemEventsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:textColor="@color/colorText"/>
        </LinearLayout>

        <View
            android:id="@+id/dividerItemEventsList"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorDivider"
            android:layout_below="@id/llAddressItemEventsList"/>

        <RelativeLayout
            android:id="@+id/rlInfoItemEventsList"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@id/dividerItemEventsList">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imvUserItemEventsList"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:theme="@style/AppTheme"
                app:civ_border_width="0.5dp"
                app:civ_border_color="@color/colorDivider"
                />
            <TextView
                android:id="@+id/txvUserItemEventsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imvUserItemEventsList"
                android:textColor="@color/colorText"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:id="@+id/llUsersItemEventsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/txvPeopleEventsList"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imvPeopleEventsList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_account_multiple"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>